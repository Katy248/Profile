<nav class="flex flex-row gap-8 p-4 bg-bg1-dark flex-wrap">

    <NavLink href="/" class="block">
        <span class="text-green dark:text-green-dark"> Katy</span>
    </NavLink>
    @foreach (var link in _links)
    {
        <NavLink href="@link.Link" class="block flex-grow sm:flex-grow-0 text-center">
            @link.Display
        </NavLink>
    }

</nav>

@code {
    private (string Link, string Display)[] _links =
    [
    @* ("", "Katy"), *@
("counter", "Counter ->"),
("weather", "Weather =>"),
("projects", "Projects =>>")
];
}

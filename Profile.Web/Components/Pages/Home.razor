@page "/"

<PageTitle>Home</PageTitle>

<h1>Katy (Anton)</h1>
<p class="text-center">
    C# programmer.
    Software enginering student.
    The main fan of <a href="https://band.link/STAERF" target="_blank">staerf</a>.
</p>
<div class="grid md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5">

    <LanguagesCard />
    <ProjectsCard />
    <ToolsCard />
    <LinksCard />
    <article>
        <h3>My links</h3>
        <ul class="flex flex-row flex-wrap">
            @foreach (var link in _links)
            {
                <li>
                    <a href="link.Link" class="flex flex-row border dark:border-bg-4-dark">

                        <div class="p-1 dark:bg-bg-2 min-w-6">

                        </div>
                        <div class="p-1 dark:bg-bg-h-dark">
                            @link.Name
                        </div>
                    </a>
                </li>
            }
        </ul>
    </article>

</div>



@code {

    (string Name, string Link)[] _links = [
    ("GitLab", "https://Gitlab.com/Katy248")
    ];
}
